---
interface Props {
  title: string;
  description: string;
  titleKey?: string;
  descriptionKey?: string;
}

const { title, description, titleKey, descriptionKey } = Astro.props;
---

<section class="hero">
  <h1 data-i18n={titleKey}>{title}</h1>
  <p class="subtitle" data-i18n={descriptionKey}>{description}</p>
</section>

<style>
  .hero {
    padding: 4rem 0;
  }
</style>
